<!doctype html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Аморальная Дырочка</title>
        <link rel="stylesheet" href="/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=M+PLUS+1p" rel="stylesheet">
        <link rel="icon" href="pics/favicon.ico" type="image/x-icon">
        <link rel="shortcut icon" href="pics/favicon.ico" type="image/x-icon">
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" type="text/javascript"></script>
        <script src="/js/main.js" type="text/javascript"></script>
        <script src="//vk.com/js/api/openapi.js" type="text/javascript"></script>
        <script type="text/javascript">
            VK.init({
                apiId: 6672308
            });
        </script>
    </head>

    <body>
        <div id="header">
            <div id="logo">
                <div id="logo_img"></div>
                <div id="logo_title">Аморальная Дырочка</div>
            </div>
            <input type="text" placeholder="Поиск" class="find_input" size="15">
            <div id="menu_but">+</div>
        </div>
        <% if (isNotFound) { %>
        <p style="margin: 0; margin-top: 70px; padding: 0; text-align: center;"><%= err_msg%></p>
        <% } %>
        <div id="main" <% if (isNotFound) {%> style="margin-top: 0"<% } %>>
            <div id="wrapper">
                <% for (let i = 1; i < data.length; i++) { %>
                <div id="meme_div">
                    <div class="meme"
                         id="meme<%= i - 1 %>"
                         style="background-image:url(<%= '/memes/' + data[i].split('\r\n')[1]%>)"></div>
                    <div class="panel_tags" id="panel_tags<%= i - 1 %>">
                        <% for (let j = 0; j < 2; j++) { %>
                        <span><%= '#' + data[i].split('\r\n')[2].split(',')[j].toString() %></span>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
            <div id="panel">
                <div id="upload_but">Загрузить мем</div>
            </div>
        </div>
        <div id="footer">
            <div id="copyright">
                <p class="copyright"></p>
                <script>
                    let date = new Date();
                    if (date.getFullYear() > 2018)
                        $('.copyright').html('&copy;Copyright 2018-' + date.getFullYear().toString() + ', все права защищены, Dira Inc.');
                    else
                        $('.copyright').html('&copy;Copyright 2018, все права защищены, Dira Inc.');
                </script>
            </div>
            <div id="contacts">
                <p>Поддержка: <a href="mailto:support@dirochka.com">support@dirochka.com</a></p>
            </div>
        </div>
    </body>
</html>